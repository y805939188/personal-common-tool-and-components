{
  "compilerOptions": {
    "outDir": "",
    "jsx": "react",
    "target": "es5",
    "module": "ES2015",
    "lib": [
      "es2015",
      "dom",
      "scripthost",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@root": ["./"],
      "@component": ["./src"],
      "@widget": ["./src"],
    },
  },
  "include": ["src", "demo", "typings"],
  "exclude": ["node_modules"],
}
